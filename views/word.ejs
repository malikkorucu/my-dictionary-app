<body>
  <%- include('components/header') %>
  <main class="word-page">
    <div class="container">
      <form method="POST" action="<% if(id) {%>/word/update/<%= word.id %> <% } else { %>/word<% } %> ">
        <input type="text" value="<%if (id) {%><%=word.word%><%}%>" name="word" id="word" placeholder="Kelime" />
        <input type="text" value="<%if (id) {%><%=word.meaning%><%}%>" name="meaning" id="word" placeholder="Anlamı" />
        <button>
          <% if (id !== null) { %>
          Güncelle
          <% } else { %>
          Ekle
          <% } %>
        </button>
      </form>
    </div>
  </main>
</body>
